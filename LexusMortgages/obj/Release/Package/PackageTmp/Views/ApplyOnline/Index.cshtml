
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Apply Online</title>

</head>
<body>
    <div class="container-fluid">
        @model LexusMortgages.Models.ApplyOnline
        @{
            ViewBag.Title = "Apply Online";
        }
        <div class="col-md-12" style="padding-top:1%;">
            <h2 class="text-center" >@ViewBag.Title</h2>
            <hr class="myhr" />
        </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
         <div class="col-md-8 col-md-offset-2">   
             
             <p>Complete our online application form to take the first steps. We will then search our wide range of mortgages to find the one that best meets your own personal requirements. Then, we will contact you to let you know exactly what we can offer, in plain and simple English.</p>

            <p> Please note, at Lexus Mortgages, we take the privacy of our clients very seriously. As such, none of your personal details will be disclosed to a third party other than the banking institutions used in our research process.</p>
         <hr />
         </div>

   <div class="col-md-12">     
       <div class="col-md-4 col-md-offset-1">
            <div class="col-md-12" style="padding-bottom:2%;margin-bottom:5%">
                <div class="col-md-12 box-header">
                    <h3 class="text-center" style="color:#fff">Application</h3>
                </div>
                    @section Scripts {
                    <div>
                        @Scripts.Render("~/bundles/jqueryval")
                        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBOmCPNlB72ldTsoLbD12eEoRIRlgZw360&libraries=places"></script>
                        <script type="text/javascript">
                            google.maps.event.addDomListener(window, 'load', function () {
                                
                                var input = document.getElementById('address');
                                var places = new google.maps.places.Autocomplete(input);
                            });
                           
                        </script>
                        <script type="text/javascript">
                            $(document).ready(function () {
                                $("#dob").one("click", function () {
                                    $('.datepicker').datepicker(); //Initialise any date pickers
                                    $("#dob").addClass("datepicker");
                                    $('#dob').datepicker('setDate', new Date(1975, 1, 1));
                                    $('#dob').show();
                                });
                            });
                          
                        </script>
                    </div>
                    }
                <div class="col-md-12 box">
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.fname, new { placeholder = Html.DisplayNameFor(n => n.fname) })
                        <br />
                        @Html.ValidationMessageFor(m => m.fname, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.sname, new { placeholder = Html.DisplayNameFor(n => n.sname) })
                        <br />
                        @Html.ValidationMessageFor(m => m.sname, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.address, new { placeholder = Html.DisplayNameFor(n => n.address) })
                        <br />
                        @Html.ValidationMessageFor(m => m.address, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.telephone, new { placeholder = Html.DisplayNameFor(n => n.telephone) })
                        <br />
                        @Html.ValidationMessageFor(m => m.telephone, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.email, new { placeholder = Html.DisplayNameFor(n => n.email) })
                        <br />
                        @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.dob, new { placeholder = Html.DisplayNameFor(n => n.dob) })
                        <br />
                        @Html.ValidationMessageFor(m => m.dob, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12">
                        @Html.DropDownListFor(m => m.martial, new SelectList(
                        (List<Object>)ViewBag.MartialOptions,
                            "value", "text", 2), "---Martial Status---")
                        <br />
                        @Html.ValidationMessageFor(m => m.martial, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.occupation, new { placeholder = Html.DisplayNameFor(n => n.occupation) })
                        <br />
                        @Html.ValidationMessageFor(m => m.occupation, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.employer, new { placeholder = Html.DisplayNameFor(n => n.employer) })
                        <br />
                        @Html.ValidationMessageFor(m => m.employer, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.netMonthlyIncome, new { placeholder = Html.DisplayNameFor(n => n.netMonthlyIncome) })
                        <br />
                        @Html.ValidationMessageFor(m => m.netMonthlyIncome, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.otherIncome, new { placeholder = Html.DisplayNameFor(n => n.otherIncome) })
                        <br />
                        @Html.ValidationMessageFor(m => m.otherIncome, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-md-offset-2">
           
                <div class="col-md-12" style="margin-bottom:5%">
                    <div class="col-md-12 box-header">
                        <h3 class="text-center" style="color:#fff">Mortgage Information</h3>
                    </div>
                    <div class="col-md-12 box">
                        <div class="col-md-12">
                            @Html.DropDownListFor(model => model.mortgageType, new SelectList(
                            (List<Object>)ViewBag.MortgageTyOptions,
                                "value", "text", 2), "---Mortgage Type---")
                            @Html.ValidationMessageFor(m => m.mortgageType, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.purchasePrice, new { placeholder = Html.DisplayNameFor(n => n.purchasePrice) })
                            <br />
                            @Html.ValidationMessageFor(m => m.purchasePrice, "", new { @class = "text-danger" })
                        </div>


                        <div class="col-md-12">
                            @Html.DropDownListFor(model => model.mortgageTerm, new SelectList(
                    (List<Object>)ViewBag.MortgageTmOptions,
                        "value", "text", 2), "---Mortgage Term---")
                            <br />
                            @Html.ValidationMessageFor(m => m.mortgageTerm, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-12">
                            @Html.DropDownListFor(model => model.propertyType, new SelectList(
                        (List<Object>)ViewBag.PropertyOptions,
                            "value", "text", 2), "---Property Type---")
                            <br />
                            @Html.ValidationMessageFor(m => m.propertyType, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.amountReq, new { placeholder = Html.DisplayNameFor(n => n.amountReq) })
                            <br />
                            @Html.ValidationMessageFor(m => m.amountReq, "", new { @class = "text-danger" })
                        </div>

                        @*<div class="g-recaptcha form-group" style="padding-left:20%;width:20%" data-sitekey="6LdzQygTAAAAADPFa5eq9hq_JXgXRyMPfxDxeQj4">
            </div>*@
                        <div class="col-md-10 col-md-offset-1">
                            <button id="btnapply" class="btn mybutton grow" type="submit">Apply Now &nbsp;<span class="glyphicon glyphicon-check"></span></button>
                        </div>
                    </div>
            </div>
           
        </div>
        </div>
    }
       
    </div>
</body>
</html>
