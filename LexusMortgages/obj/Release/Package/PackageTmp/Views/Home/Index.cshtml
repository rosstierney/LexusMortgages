<div class="intro-header">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <img class="intro-lmlogo" src="@Url.Content("~/Content/Images/LexusMortgageMainBanner.png")" />
                    <hr class="intro-divider">
                    <h3 class="box myh3 center-block" style="width:55%;color:#2D6895">Spanish Mortgage Specialists</h3>
