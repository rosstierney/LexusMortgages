<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Apply Online</title>
</head>
<body>

    @{
        ViewBag.Title = "Contact";
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBOmCPNlB72ldTsoLbD12eEoRIRlgZw360&libraries=places"></script>
        <script type="text/javascript">
                        google.maps.event.addDomListener(window, 'load', function () {

                            var input1 = document.getElementById('city');
                            var places1 = new google.maps.places.Autocomplete(input1);
                        });

                        $(Document).ready(function () {
                            animate();
                        });

                            function animate() {
                                $("#gly-icon").fadeOut("slow", animate);
                                $("#gly-icon").fadeIn("slow", animate);
                            };
                       
        </script>
    }
    <!-- Container (Contact Section) -->
    <div id="contact" class="container-fluid">
        <div class="col-md-6" style="padding-top:3%;padding-bottom:5%;padding-right:5%">

                <div class="col-md-12 box"style="opacity:0.85">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 text-center" style="color:#fff">
                            <h2>Let's Get In Touch!</h2>
                            <hr>
                            <div id="typed-element" class="col-md-12" style="margin:0;float:none;min-height:27px"></div>

                        </div>
                        <div class="col-md-4 col-md-offset-2 text-center" style="color:#fff">
                            <i class="grow fa fa-phone fa-3x sr-contact"></i>
                            <p>+34 602 584 781 <span class="flag-icon flag-icon-es"></span></p>
                            <p>+353 (0)87 9833731 <span class="flag-icon flag-icon-ie"></span></p>
                        </div>
                        <div class="col-md-4 text-center">
                            <i class="grow fa fa-envelope-o fa-3x sr-contact" style="color:#fff"></i>
                            <p><a href="mailto:info@lexusMortgages.co.uk">info@lexusmortgages.co.uk</a></p>
                        </div>
                    </div>
                </div>
                @*<div class="text-center" style="margin:auto;padding-top:7px">
                <a href="https://www.youtube.com/channel/UC1FAezybUppi8Ikq4bbEEfw"
                   class="zocial youtube">
                    Subscribe
                </a>
            </div>*@

            </div>
            <script src="~/Scripts/typed.js"></script>
            <script>
        setInterval(function () {
            $("#typed-element").typed({
                strings: ["Give us a call or send us an email and we will get back to you as soon as possible!"],
                typeSpeed: 0
            });
        }, 8000);

            </script>


            <div class="col-md-4 pull-right box" style="opacity:0.85;margin:2%;padding:1%">

                <h2 class="text-center" style="color:#fff"><span class="glyphicon glyphicon-earphone"></span>&nbsp;Request Call Back</h2>
                <hr />

                @using (Html.BeginForm())
                {

                    @Html.AntiForgeryToken()
                    @model LexusMortgages.Models.Contact
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.fullname, new { placeholder = Html.DisplayNameFor(n => n.fullname) })
                        @Html.ValidationMessageFor(m => m.fullname, "", new { @class = "text-danger bg-danger" })
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.email, new { placeholder = Html.DisplayNameFor(n => n.email) })
                        @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger bg-danger" })
                    </div>

                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.city, new { placeholder = Html.DisplayNameFor(n => n.city) })
                        @Html.ValidationMessageFor(m => m.city, "", new { @class = "text-danger bg-danger" })
                    </div>

                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.telephone, new { placeholder = Html.DisplayNameFor(n => n.telephone) })
                        @Html.ValidationMessageFor(m => m.telephone, "", new { @class = "text-danger bg-danger" })
                    </div>

                    <div class="col-md-12">
                        @Html.TextAreaFor(m => m.enquiry, new { placeholder = Html.DisplayNameFor(n => n.enquiry) })
                        @Html.ValidationMessageFor(m => m.enquiry, "", new { @class = "text-danger bg-danger" })<br>
                    </div>

                    <div class="col-md-12 form-group">
                        <button id="btnContact" class="grow btn btn-default mybutton center-block" type="submit"><span class="glyphicon glyphicon-send" style="padding-right:2%"></span>Send Message</button>
                    </div>
                }
                <div class="col-md-12 text-center">
                    <img src="@Url.Content("~/Content/Images/skype-logo.png")" style="width:28%" alt="viber-logo" />
                    <img src="@Url.Content("~/Content/Images/whatsapp.png")" style="width:20%" alt="viber-logo" />
                    <img src="@Url.Content("~/Content/Images/messenger-logo.png")" style="width:20%" alt="viber-logo" />
                    <img src="@Url.Content("~/Content/Images/viber-logo.png")" style="width:26%" alt="viber-logo" />
                </div>
            </div>
        </div>

    </div>
</body>
</html>