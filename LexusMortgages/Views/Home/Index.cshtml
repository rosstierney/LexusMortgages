@{
    ViewBag.Title = "Home Page";
}

<div class="intro-header">
     
    <div class="container">
        <div class="row">
                <div class="intro-message">
                        <h1 class="myshadow" style="font-family:'lobster'; color:#E5AC36"><span class="glyphicon glyphicon-home"></span>&nbsp;Spanish Mortgage Specialists</h1>
                   
                </div>
        </div>
    </div>
    <!-- /.container -->

</div>
<!-- /.intro-header --> 
    <div class="container-fluid" style="background-color: #2D6895">          
        <div id="welcome" class="col-md-6 text-center">
            <hr />
            <p class="lead myshadow">
                Welcome to Lexus Mortgages your first choice for mortgages in Spain.
            </p>
            <p class="lead myshadow">
                At Lexus Mortgages we offer a comprehensive range of services to guide you through the process of obtaining a mortgage in Spain.
            </p>
            <hr />
        </div>
        <div class="col-md-6">
                <img src="@Url.Content("~/Content/Images/20euro.png")" style="padding:5%;width:90%" alt="cash-house-img" />
        </div>
     </div>
     <div class="container-fluid" style="padding-left:10%;border-radius:0px 0px 30px 30px;background-color: #2D6895">
        
             <div class="box col-md-3">
                 <h2 class="myshadow">About Lexus Mortgages</h2>
                 <hr />
                 <p>
                     Our wealth of experience ensures that you receive the best possible rates and conditions for your Spanish Mortgage.
                     We only recommend reputable lenders & negotiate on your behalf to obtain the best deal on a Spanish mortgage.
                 </p>
                 <p><a class="grow btn btn-default center-block" href="@Url.Action("About", "Home")">Learn more &raquo;</a></p>
             </div>
             <div class="box col-md-3">
                 <h2 class="myshadow">Mortgage Process</h2>
                 <hr />
                 <p">
                     At Lexus Mortgages we are fully experienced in the lending criteria´s of the Spanish lenders. We are often able to give an instant decision as to whether the mortgage would be approved.</p>
                     <p><a class="grow btn btn-default center-block" href="@Url.Action("MortgageProcess", "Home")">Learn more &raquo;</a></p>
             </div>
             <div class="box col-md-3">
                 <h2 class="myshadow">Apply Online</h2>
                 <hr />
                 <p>
                     Complete our online application form to take the first steps. We will then search our wide range of mortgages to find the one that best meets your own personal requirements.
                 </p>
                 <p><a class="grow btn btn-info center-block" href="@Url.Action("MortgageProcess", "Home")">Apply Online! &raquo;</a></p>
             </div>
    </div>
             
<div class="mydiv">
    <div class="text-center">
        <hr />
        <h3 class="myshadow smlCarousel" style="color:#ffffff">Testimonials</h3>
        <hr />
    </div>
