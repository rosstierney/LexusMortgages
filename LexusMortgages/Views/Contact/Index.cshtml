@{
    ViewBag.Title = "Contact";
}
<!-- Container (Contact Section) -->
<div id="contact" class="container mypadding" style="width:100%">
    <div class="col-md-4 pull-right div-rounded-blue-contact" style="opacity:0.85">
        <h2 class="text-center" style="color:#fff"><span class="glyphicon glyphicon-earphone"></span>&nbsp;Contact Us</h2>
        <hr />
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()
            @model LexusMortgages.Models.Contact
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.fullname, new { placeholder = Html.DisplayNameFor(n => n.fullname) })
                    @Html.ValidationMessageFor(m => m.fullname, "", new { @class = "text-danger" })
                </div>
            <div class="col-md-12">
                    @Html.TextBoxFor(m => m.email, new { placeholder = Html.DisplayNameFor(n => n.email) })
                    @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
            </div>
            
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.city, new { placeholder = Html.DisplayNameFor(n => n.city) })
                    @Html.ValidationMessageFor(m => m.city, "", new { @class = "text-danger" })
                </div>
    
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.telephone, new { placeholder = Html.DisplayNameFor(n => n.telephone) })
                        @Html.ValidationMessageFor(m => m.telephone, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-12">
                        @Html.TextAreaFor(m => m.enquiry,  new { placeholder = Html.DisplayNameFor(n => n.enquiry) })
                        @Html.ValidationMessageFor(m => m.enquiry, "", new { @class = "text-danger" })<br>
                    </div>

                <div class="col-md-12 form-group">
                    <button id="btnContact" class="grow btn btn-default mybutton center-block" type="submit">Send Message</button>
                </div>
        }
        <div class="col-md-12 text-center">
            <img src="@Url.Content("~/Content/Images/skype-logo.png")" style="width:26%" alt="viber-logo" />
            <img src="@Url.Content("~/Content/Images/whatsapp.png")" style="width:18%" alt="viber-logo" />
            <img src="@Url.Content("~/Content/Images/viber-logo.png")" style="width:24%" alt="viber-logo" />
            <img src="@Url.Content("~/Content/Images/messenger-logo.png")" style="width:20%" alt="viber-logo" />
        </div>
    </div>


</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
